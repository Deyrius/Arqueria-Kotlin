<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ronda numero: " />

        <TextView
            android:id="@+id/e_txt_rondas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/e_flecha_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Flecha 1"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/e_flecha_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Flecha 2"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/e_flecha_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Flecha 3"
        android:inputType="number"
        android:minHeight="48dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/e_txt_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Resultado"
                android:visibility="visible" />

            <TextView
                android:id="@+id/e_txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:visibility="gone" />

            <TextView
                android:id="@+id/e_txt_promedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Promedio"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/e_txt_e_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible" />

            <TextView
                android:id="@+id/e_txt_e_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/e_txt_e_promedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:visibility="gone" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/e_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sumar" />

</LinearLayout>